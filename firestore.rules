
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Users can only read and write to their own document.
      allow read, update, delete: if isOwner(userId);
      // A new user can create their own profile document.
      allow create: if isOwner(userId);
      // Nobody can list all users.
      allow list: if false;

      // Tasks are stored in a subcollection under the user's document.
      match /tasks/{taskId} {
        // Users can perform all operations on their own tasks.
        allow read, write: if isOwner(userId);
      }
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    // request.auth is not null if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the signed-in user is the owner of a document.
    // Compares the UID from the request with the userId from the document path.
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for the 'users' collection.
    // Each user's profile is a document where the ID is the user's UID.
    match /users/{userId} {

      // READ rule:
      // A user can only read their own profile document.
      allow read: if isOwner(userId);

      // WRITE rules (create, update, delete):
      // CREATE: A new user can create their own profile document.
      allow create: if isOwner(userId);
      // UPDATE: A user can update their own existing profile document.
      allow update: if isOwner(userId);
      // DELETE: A user can delete their own profile document.
      allow delete: if isOwner(userId);

      // LIST rule:
      // Nobody is allowed to get a list of all users in the database.
      // This is a critical security measure to prevent data scraping.
      allow list: if false;

      // Rules for the 'tasks' subcollection within a user's document.
      match /tasks/{taskId} {

        // READ, WRITE rules:
        // A user has full read and write (create, update, delete) access
        // to all tasks within their own 'tasks' subcollection.
        allow read, write: if isOwner(userId);
      }
      
      // Rules for the 'events' subcollection within a user's document.
      match /events/{eventId} {

        // READ, WRITE rules:
        // A user has full read and write (create, update, delete) access
        // to all events within their own 'events' subcollection.
        allow read, write: if isOwner(userId);
      }
    }
  }
}

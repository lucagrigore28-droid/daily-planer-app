{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "environment": {
        "ONESIGNAL_APP_ID": "${env:NEXT_PUBLIC_ONESIGNAL_APP_ID}",
        "ONESIGNAL_REST_API_KEY": "${env:ONESIGNAL_REST_API_KEY}"
      },
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
